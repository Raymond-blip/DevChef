{
  "name": "devchef",
  "displayName": "DevChef: Recipes for Coders",
  "description": "AI-powered cooking recipes and timers designed specifically for developers. Fuel your coding sessions with nutritious meals!",
  "version": "1.0.0",
  "publisher": "devchef",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Productivity"
  ],
  "keywords": [
    "cooking",
    "recipes",
    "nutrition",
    "timer",
    "developer",
    "productivity",
    "food",
    "meal planning"
  ],
  "activationEvents": [
    "onCommand:devchef.openDevChef",
    "onCommand:devchef.openTimer",
    "onCommand:devchef.generateRecipe"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devchef.openDevChef",
        "title": "üç≥ Open DevChef",
        "category": "DevChef"
      },
      {
        "command": "devchef.openTimer",
        "title": "‚è∞ Open Cooking Timer",
        "category": "DevChef"
      },
      {
        "command": "devchef.generateRecipe",
        "title": "ü§ñ Generate AI Recipe",
        "category": "DevChef"
      },
      {
        "command": "devchef.quickRecipe",
        "title": "‚ö° Quick Recipe Search",
        "category": "DevChef"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "devchef.openDevChef",
          "when": "true"
        },
        {
          "command": "devchef.openTimer",
          "when": "true"
        },
        {
          "command": "devchef.generateRecipe",
          "when": "true"
        },
        {
          "command": "devchef.quickRecipe",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "command": "devchef.quickRecipe",
          "when": "editorTextFocus",
          "group": "devchef"
        }
      ]
    },
    "configuration": {
      "title": "DevChef",
      "properties": {
        "devchef.autoOpenOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open DevChef when VS Code starts"
        },
        "devchef.defaultDietaryRestriction": {
          "type": "string",
          "enum": ["none", "vegetarian", "vegan", "keto", "paleo", "gluten-free"],
          "default": "none",
          "description": "Default dietary restriction for AI recipe generation"
        },
        "devchef.defaultComplexity": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"],
          "default": "intermediate",
          "description": "Default complexity level for AI recipe generation"
        },
        "devchef.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable timer notifications"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-extension": "code --install-extension devchef-1.0.0.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Raymond-blip/devchef"
  },
  "homepage": "https://github.com/Raymond-blip/devchef",
  "bugs": {
    "url": "https://github.com/Raymond-blip/devchef/issues"
  },
  "license": "MIT"
}

